<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >
<LinearLayout
    android:id="@+id/llInicio"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BIENVENIDO"
        android:textSize="30dp"
        android:layout_margin="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MANTENGA PULSADO PARA INICIAR LA APLICACION"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"/>
    <Button
        android:id="@+id/btnEmpezar"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="@string/empezar"
        android:visibility="visible"
        />
</LinearLayout>
<LinearLayout
    android:id="@+id/linearIrAPantallas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:orientation="vertical"
    android:gravity="center">
    <Button
        android:layout_margin="@dimen/marginbtn"
        android:id="@+id/btnIniciarCliente"
        android:layout_width="@dimen/btnLargo"
        android:layout_height="@dimen/btnAncho"
        android:text="@string/entrarCliente"
        android:onClick="btnIniciarLogin"/>
    <Button
        android:layout_margin="@dimen/marginbtn"
        android:id="@+id/btnIniciarEmpresa"
        android:layout_width="@dimen/btnLargo"
        android:layout_height="@dimen/btnAncho"
        android:text="@string/entrarEmpresa"
        android:onClick="btnIniciarLogin"
        />
</LinearLayout>
</LinearLayout>